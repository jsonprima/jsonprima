{
  "version": "0.1.0",
  "scripts": {
    "build": "cargo build --release && cargo doc --release",
    "check": "cargo check",
    "clean": "cargo clean",
    "cm": "git-cz",
    "format": "cargo fmt -- ",
    "lint": "cargo clippy -- -D warnings",
    "prerelease": "standard-version -s --skip.commit --skip.tag",
    "release": "git add . && standard-version -s -a --skip.bump --skip.changelog",
    "release:publish": "git push origin HEAD && git push git push origin $(cat package.json | jq -r \".version\")",
    "test": "cargo test"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@iarna/toml": "^2.2.3",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.2",
    "standard-version": "^6.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run check && npm run lint && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{rs}": [
      "npm run format",
      "git add"
    ]
  },
  "standard-version": {
    "scripts": {
      "postbump": "node scripts/bump-cargo.js"
    }
  }
}
